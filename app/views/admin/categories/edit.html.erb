<% provide(:title, 'Admin category update') %>
<h1>Обновление категории</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category, url: admin_category_path(@category)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>