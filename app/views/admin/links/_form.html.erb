<%= simple_form_for(@link, url: admin_link_path(@link)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :url, label: 'URL' %>
  <%= f.input :description, as: :text, label: 'Описание' %>
  <%= f.association :category, include_blank: false, label: 'Категория' %>

  <%= f.submit submit_title, class: "btn btn-large btn-primary" %>
<% end %>