<%= simple_form_for @link, url: admin_link_path(@link),
  wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    boolean: :vertical_boolean
  } do |f| %>
  <%= f.error_notification %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.input :url, label: 'URL' %>
  <%= f.association :category, collection: @categories_for_links, include_blank: false, label: 'Категория' %>

  <%= f.input :published, label: 'Опубликованно', as: :boolean %>

  <%= f.text_area :description, :class => "tinymce", :rows => 40, :cols => 120 %>
  <%= tinymce :content_css => asset_path('application.css') %>

  <%= f.submit submit_title, class: "btn btn-large btn-primary"  %> 
<% end %>