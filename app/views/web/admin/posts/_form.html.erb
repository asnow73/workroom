<%= simple_form_for @post, url: admin_post_path(@post),
	wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    boolean: :vertical_boolean
  } do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.input :title, label: 'Заглавие' %>

  <%= f.association :category, collection: @categories_for_posts, include_blank: false, label: 'Категория' %>

  <%= f.input :published, label: 'Опубликованно', as: :boolean %>
  
 <div class="tabpages">
  <div id=tab1>
   <a href="#tab1">Полный текст заметки</a>
   <div><%= f.text_area :content, :class => "tinymce", :rows => 30, :cols => 120 %></div>
  </div>
  <div id=default2>
   <a href="#default2">Краткое содержание</a>
   <div><%= f.text_area :preview, :class => "tinymce", :rows => 30, :cols => 120 %></div>
  </div>
 </div>

  <!--<%= f.label 'Краткое содержание'%>
  <%= f.text_area :preview, :class => "tinymce", :rows => 10, :cols => 120 %>
  </br>
  <%= f.label 'Полный текст заметки'%>
  <%= f.text_area :content, :class => "tinymce", :rows => 30, :cols => 120 %>-->
  <%= tinymce :content_css => asset_path('application.css') %>

  </br>
  <%= f.submit submit_title, class: "btn btn-large btn-primary"  %> 
<% end %>