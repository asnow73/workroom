<%= simple_form_for @post, url: admin_post_path(@post),
	wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    boolean: :vertical_boolean
  } do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.input :title, label: 'Заглавие' %>

  <%= f.association :category, collection: @categories_for_posts, include_blank: false, label: 'Категория' %>

  <%= f.input :published, label: 'Состояние заметки', as: :boolean %>

  <%= f.input :content, as: :ckeditor, label: 'Содержимое', :input_html => { :ckeditor => {:toolbar => 'Full', :height => 400}} %>

  <%= f.submit submit_title, class: "btn btn-large btn-primary"  %> 
<% end %>