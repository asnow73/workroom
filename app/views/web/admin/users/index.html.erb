<% provide(:title, 'Admin user') %>
<h1>Администрирование пользователей</h1>
<%= link_to 'Новый пользователь...', new_admin_user_path, :class => 'btn btn-primary' %>
<table class="table table-bordered">
	<thead>
		<tr>
			<th><%= sort_link @q, :id %></th>
			<th><%= sort_link @q, :name %></th>
      <th><%= sort_link @q, :email %></th>
			<th></th>
		</tr>
		<tbody>
      <% @users.each do |item| %>
        <tr>
        	<td><%= item.id %></td>
        	<td><%= item.name %></td>
          <td><%= item.email %></td>
          <td>
        		<%= link_to edit_admin_user_path(item), class: 'btn btn-mini' do %>
        		  <i class = "icon-pencil"></i>
        		<% end %>

						<%= link_to admin_user_path(item), method: :delete, data: { confirm: "Вы уверены?" }, class: 'btn btn-mini btn-danger' do %>
              <i class = "icon-trash"></i>
						<% end %>

        	</td>
        </tr>
      <% end %>
    </tbody>
	</thead>
</table>

<%= will_paginate @users %>