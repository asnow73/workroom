<%= simple_form_for @user, url: admin_user_path(@user),
  wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    boolean: :vertical_boolean
  } do |f| %>
  <%= f.error_notification %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :name, label: 'Имя' %>
  <%= f.input :email, label: 'e-mail' %>
  <%= f.input :password, label: 'Пароль' %>
  <%= f.input :password_confirmation, label: 'Подтверждение пароля' %>

  <%= f.submit submit_title, class: "btn btn-large btn-primary"  %> 
<% end %>