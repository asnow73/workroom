<% provide(:title, 'Admin section') %>
<div class="thema-text">Администрирование разделов</div>

<div class="button_new_record_db">
  <%= link_to 'Новый раздел...', new_admin_section_path, :class => 'btn btn-primary' %>
</div>
<table class="table table-bordered">
	<thead>
		<tr>
			<th><%= sort_link @q, :id %></th>
      <th><%= sort_link @q, :created_at %></th>
			<th><%= sort_link @q, :name %></th>
			<th></th>
		</tr>

		<tbody>
      <% @sections.each do |item| %>
        <tr>
        	<td><%= item.id %></td>
          <td><%= item.created_at %></td>
        	<td><%= item.name %></td>
        	<td class="del-edit-buttons-group">
        		<%= link_to edit_admin_section_path(item), class: 'btn btn-mini' do %>
        		  <i class = "icon-pencil"></i>
        		<% end %>

						<%= link_to admin_section_path(item), method: :delete, data: { confirm: "Вы уверены?" }, class: 'btn btn-mini btn-danger' do %>
              <i class = "icon-trash"></i>
						<% end %>

        	</td>
        </tr>
      <% end %>
    </tbody>
	</thead>
</table>

<%= will_paginate @sections %>