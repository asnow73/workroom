<% provide(:title, 'Web posts') %>

<div class="row">
  <div class="span10">

    <h2>Заметки</h2>
  	<div class="media">
		  <% @posts.each do |post| %>
		    <div class="media-body media-body-interval">
		      <h4 class="media-heading"><%= link_to "#{post.title}", post_path(post) %></h4>
		      <%= summary_for_html_text(post.content) %>
		      <div>
		        <span class="color-green">Категория: </span>
		        <%= link_to post.category.name, category_posts_path(post.category) %>
		    	</div>
		    </div>
		  <% end %>
		</div>
		<%= will_paginate @posts %>

  </div>
	<div class="fix-position">
		<div class="color-green"><h3>Категории:</h3></div>
		<% @categories.each do |category| %>
		  <div><%= link_to category.name, category_posts_path(category) %></div>
		<% end %>
	</div>

</div>
