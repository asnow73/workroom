<% provide(:title, 'Web posts') %>

<div class="row">
  <div class="span10">

    <h2>Заметки</h2>
  	<div class="media">
		  <% @posts.each do |post| %>
		    <div class="media-body media-body-interval">
		      <h4 class="media-heading"><%= link_to "#{post.title}", post_path(post) %></h4>
		      <%= summary_for_html_text(post.content) %>
		      <div class="color-green">Категория: </div><%= link_to post.category.name, posts_path(posts: {category_id: post.category} ) %>
		    </div>
		  <% end %>
		</div>
		<%= will_paginate @posts %>

  </div>
	<div class="span2">
		<div class="color-green"><h3>Категории:</h3></div>
		<% @categories.each do |category| %>
		  <div><%= link_to category.name, posts_path(posts: {category_id: category} ) %></div>
		<% end %>
	</div>

</div>
